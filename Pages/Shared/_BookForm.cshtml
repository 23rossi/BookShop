@model BookShop.DataAccess.Query
<div style="width:500px" class="text-center">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form method="post" asp-page-handler="Form">
        <div class="form-group">
            <label style="width:150px;float:left" asp-for="BookName" class="control-label"></label>
            <input style="width:200px;" type="text" asp-for="BookName" class="form-control" />
            <span asp-validation-for="BookName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label style="width:150px;float:left" asp-for="AuthorName" class="control-label"></label>
            <input style="width:200px;" type="text" asp-for="AuthorName" class="form-control" />
            <span asp-validation-for="AuthorName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label style="width:150px;float:left" asp-for="QueryText" class="control-label"></label>
            <input style="width:200px;" type="text" asp-for="QueryText" class="form-control" />
            <span asp-validation-for="QueryText" class="text-danger"></span>
        </div>
        <input type="submit" value="Search">
    </form>
</div>